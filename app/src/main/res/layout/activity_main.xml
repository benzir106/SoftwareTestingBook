<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity=""
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <ImageView
        android:layout_width="179dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/soft"

        />

    <Button
        android:id="@+id/Ch1"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/butt"
        android:gravity="center"
        android:text="Chapter-1"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Chapter-2"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:background="@drawable/butt"
        android:textStyle="bold"
        android:gravity="center"

        android:layout_marginTop="25dp"
        android:text="Chapter-2"
        />
    <Button
        android:id="@+id/Chapter-3"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:background="@drawable/butt"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:text="Chapter-3"
        />
    <Button
        android:id="@+id/Chapter-4"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:background="@drawable/butt"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:text="Chapter-4"
        />
    <Button
        android:id="@+id/Chapter-5"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:background="@drawable/butt"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:text="Chapter-5"
        />
</LinearLayout>
</ScrollView>

</LinearLayout>